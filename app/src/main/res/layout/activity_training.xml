<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

            <tlx.khomahi.com.khomahi.face.Tutorial3View
                android:id="@+id/tutorial3_activity_java_surface_view"
                android:layout_width="250dp"
                android:layout_height="250dp"
                />

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignTop="@id/tutorial3_activity_java_surface_view"
                android:layout_toRightOf="@id/tutorial3_activity_java_surface_view"
                android:layout_toEndOf="@id/tutorial3_activity_java_surface_view"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:src="@drawable/user_image"
                android:contentDescription="image_preview" />

            <ToggleButton
                android:layout_below="@+id/tutorial3_activity_java_surface_view"
                android:id="@+id/capture"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
                android:checked="false"
                android:textOff="capture"
                android:textOn="capturing"
                android:textAllCaps="false"/>

    </RelativeLayout>

</ScrollView>

